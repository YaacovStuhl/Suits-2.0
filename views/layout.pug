doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{pageTitle} | #{siteTitle}
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Inter:wght@400;500;600&display=swap", rel="stylesheet")
    style.
      :root {
        --bg: #0e0e0e;
        --panel: #1b1b1b;
        --panel-alt: #222;
        --text: #f5f5f5;
        --muted: #9ea0a7;
        --accent: #c49b3f;
        --accent-dark: #9b7a2d;
        --danger: #f06272;
        --success: #5ec792;
      }
      * {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        min-height: 100vh;
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        background: var(--bg);
        color: var(--text);
        display: flex;
        flex-direction: column;
      }
      header {
        padding: 1.5rem 2rem 0.75rem;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
      }
      .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }
      .brand img {
        width: 70px;
        height: auto;
        filter: drop-shadow(0 6px 16px rgba(0, 0, 0, 0.6));
      }
      .brand h1 {
        margin: 0;
        font-family: 'Playfair Display', serif;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        font-size: clamp(1.4rem, 2vw, 1.9rem);
      }
      .brand span {
        display: block;
        font-size: 0.95rem;
        color: var(--muted);
        letter-spacing: 0.2em;
        text-transform: uppercase;
      }
      nav {
        width: 100%;
        padding: 0 2rem 1.5rem;
      }
      nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
      }
      nav a {
        text-decoration: none;
        color: var(--text);
        padding: 0.5rem 1.2rem;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        transition: background 0.3s, color 0.3s, transform 0.2s, border-color 0.3s;
      }
      nav a:hover {
        transform: translateY(-2px);
        border-color: var(--accent);
      }
      nav a.active {
        background: var(--accent);
        color: #0e0e0e;
        border-color: var(--accent);
      }
      main {
        flex: 1;
        padding: 0 2rem 2rem;
        display: grid;
        gap: 1.75rem;
      }
      .panel {
        background: var(--panel);
        border-radius: 16px;
        padding: 1.75rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.35);
      }
      .panel h2 {
        margin-top: 0;
        font-size: 1.15rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: var(--accent);
      }
      .grid {
        display: grid;
        gap: 1.25rem;
      }
      .grid.two {
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      }
      .stat-card {
        background: var(--panel-alt);
        border-radius: 12px;
        padding: 1.25rem;
        border: 1px solid rgba(255, 255, 255, 0.06);
      }
      .stat-card span {
        display: block;
        color: var(--muted);
        font-size: 0.85rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
      }
      .stat-card strong {
        font-size: 2rem;
        display: block;
        margin-top: 0.4rem;
      }
      form {
        display: grid;
        gap: 1rem;
      }
      label {
        text-transform: uppercase;
        letter-spacing: 0.08em;
        font-size: 0.8rem;
        color: var(--muted);
        margin-bottom: 0.35rem;
        display: block;
      }
      input,
      textarea,
      select {
        width: 100%;
        padding: 0.85rem 1rem;
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: #101010;
        color: var(--text);
        font-size: 1rem;
        font-family: inherit;
      }
      textarea {
        min-height: 120px;
        resize: vertical;
      }
      button {
        border: none;
        border-radius: 999px;
        padding: 0.9rem 1.5rem;
        background: var(--accent);
        color: #0e0e0e;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s, transform 0.2s;
      }
      button:hover {
        background: var(--accent-dark);
        transform: translateY(-1px);
      }
      .alert {
        border-radius: 10px;
        padding: 0.9rem 1.2rem;
        font-size: 0.95rem;
      }
      .alert-success { background: rgba(94, 199, 146, 0.1); border: 1px solid var(--success); color: var(--success); }
      .alert-error { background: rgba(240, 98, 114, 0.1); border: 1px solid var(--danger); color: var(--danger); }
      footer {
        padding: 1.25rem 2rem 2.5rem;
        font-size: 0.85rem;
        color: var(--muted);
        text-transform: uppercase;
        letter-spacing: 0.2em;
      }
      @media (max-width: 768px) {
        header {
          flex-direction: column;
          align-items: flex-start;
        }
        nav {
          padding: 0 1.25rem 1.25rem;
        }
        main {
          padding: 0 1.25rem 2rem;
        }
      }
  body
    header
      .brand
        if logoPath
          img(src=logoPath, alt="Simply Suits Logo")
        else
          div(style="width:70px;height:70px;border-radius:50%;border:2px solid var(--accent);")
        div
          h1 Simply Suits
          span Custom Clothiers
      div
        span(style="font-size:0.9rem;color:var(--muted);letter-spacing:0.2em;") NodeJS Showcase
    nav
      ul
        each item in menuItems
          li
            a(class=item.key === currentKey ? 'active' : '', href=item.url)= item.label
    main
      block content
    footer
      p &copy; #{new Date().getFullYear()} Simply Suits. Node.js + Express demo.

